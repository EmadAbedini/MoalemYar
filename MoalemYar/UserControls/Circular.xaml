<UserControl x:Class="MoalemYar.UserControls.Circular"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoalemYar.UserControls"
             xmlns:Metro="clr-namespace:Arthas.Controls.Metro;assembly=Arthas"
             mc:Ignorable="d" Style="{StaticResource myUserControl}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Metro:MetroProgressBar Margin="10,10,10,407" Name="prgUpdate" FlowDirection="LeftToRight" ValueChanged="prgUpdate_ValueChanged" Value="0"/>
        <Metro:MetroScrollViewer Margin="10,48,10,10">
            <Metro:MetroWaterfallFlow x:Name="waterfallFlow" ListWidth="300" />
        </Metro:MetroScrollViewer>
    </Grid>
</UserControl>
