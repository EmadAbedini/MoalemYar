    <controls:TransitioningContentControl>
        <controls:TabControl
            Name="tabc"
            MinWidth="800"
            IsDraggable="True"
            IsEnableAnimation="True"
            IsEnableTabFill="True">
            <controls:TabItem Header="ثبت اطلاعات" IsSelected="True">
                <Grid KeyboardNavigation.TabNavigation="Cycle">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.ColumnSpan="2"
                        Margin="0,0,10,0"
                        Orientation="Vertical">
                        <ComboBox
                            x:Name="cmbBase"
                            Width="240"
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            controls:InfoElement.ContentHeight="35"
                            controls:InfoElement.Placeholder="انتخاب کلاس"
                            ItemsSource="{Binding}"
                            SelectedValue="{Binding SchoolName}"
                            SelectedValuePath="Id"
                            SelectionChanged="cmbBase_SelectionChanged"
                            Style="{StaticResource ComboBoxExtend}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SchoolName}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock Text="{Binding Base}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock Text="{Binding Year}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <StackPanel Margin="10,10" Orientation="Horizontal">
                            <Label
                                Name="txtDate"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Content="تاریخ امروز"
                                Style="{StaticResource LabelInfo}" />
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                Style="{StaticResource TextBlockSubTitle}"
                                Text="همه حاضر" />
                            <ToggleButton
                                Name="swAllPresent"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Checked="swAllPresent_Checked"
                                IsChecked="False"
                                IsEnabled="False"
                                Style="{StaticResource ToggleButtonSwitch}" />
                        </StackPanel>
                    </StackPanel>
                    <DataGrid
                        x:Name="dataGrid"
                        Grid.Row="1"
                        Margin="10,0,10,10"
                        local:DataGridBehavior.DisplayRowNumber="True"
                        AutoGenerateColumns="False"
                        HeadersVisibility="All"
                        IsReadOnly="True"
                        RowHeaderWidth="60"
                        SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=Id}" Visibility="Hidden" />
                            <DataGridTextColumn
                                Width="1*"
                                Binding="{Binding Path=Name}"
                                Header="نام" />
                            <DataGridTextColumn
                                Width="1*"
                                Binding="{Binding Path=LName}"
                                Header="نام خانوادگی" />
                            <DataGridTextColumn
                                Width="1*"
                                Binding="{Binding Path=FName}"
                                Header="نام پدر" />
                            <DataGridTemplateColumn Width="1*" Header="وضعیت">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="5"
                                                    HorizontalAlignment="Center"
                                                    Style="{StaticResource TextBlockSubTitle}"
                                                    Text="حاضر" />
                                                <ToggleButton
                                                    Name="chkIsPresent"
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Checked="chkIsPresent_Checked"
                                                    IsChecked="False"
                                                    Style="{StaticResource ToggleButtonSwitch}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="5"
                                                    HorizontalAlignment="Center"
                                                    Style="{StaticResource TextBlockSubTitle}"
                                                    Text="غایب" />
                                                <ToggleButton
                                                    Name="chkIsAbsent"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Checked="chkIsAbsent_Checked"
                                                    IsChecked="False"
                                                    Style="{StaticResource ToggleButtonSwitch}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </controls:TabItem>
            <controls:TabItem Header="لیست اطلاعات" IsSelected="True">
                <Grid KeyboardNavigation.TabNavigation="Cycle">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <ComboBox
                            x:Name="cmbBaseList"
