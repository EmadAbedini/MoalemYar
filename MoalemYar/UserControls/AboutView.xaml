<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MoalemYar.UserControls"
    xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
x:Class="MoalemYar.UserControls.AboutView"
             mc:Ignorable="d"
             Style="{StaticResource myUserControl}">
    <controls:TransitioningContentControl>
        <controls:ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Source="/Resources/developer.png" />
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Text="برنامه نویس و توسعه دهنده" Style="{StaticResource TextBlockTitle}" />
                </StackPanel>
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="5"
                               VerticalAlignment="Center" Style="{StaticResource TextBlockSubTitle}"
                               Text="سید مهدی حسینی" />
                    <TextBlock Grid.Row="1" Grid.Column="2" Margin="5"
                               FontSize="15" Style="{StaticResource TextBlockDefaultInfo}"
                               Text="mahdidvb72@gmail.com" />
                </Grid>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Source="/Resources/csharp.png" />
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" FontSize="18"
                          Style="{StaticResource TextBlockTitle}"    Text="مشخصات نرم افزار" />
                </StackPanel>
                <Grid Margin="10,0" Width="auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="5"
                               VerticalAlignment="Center" Style="{StaticResource TextBlockSubTitle}"
                               Text="نسخه نرم افزار" />
                    <Label Grid.Row="1" Grid.Column="2" Margin="5"
                               Foreground="Green" Style="{StaticResource LabelInfo}"
                               Name="AppVersion" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Margin="5"
                               VerticalAlignment="Center" Style="{StaticResource TextBlockSubTitle}"
                               Text="نام برنامه" />
                    <Label Grid.Row="2" Grid.Column="2" Margin="5"
                               Foreground="Green" Style="{StaticResource LabelInfo}"
                               Name="AppName" />

                    <TextBlock Grid.Row="3" Grid.Column="1" Margin="5,5,-5,5"
                               VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Style="{StaticResource TextBlockDefaultPrimary}"
                               Text="این نرم افزار بصورت کاملا رایگان بوده و برای کمک به معلمان در مدارس به جهت پیشرفت تحصیلی دانش آموزان طراحی شده است.هرگونه فروش ممنوع می باشد" Grid.ColumnSpan="2" />
                </Grid>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Source="/Resources/fork.png" />
                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockTitle}"
                               Text="تاریخچه نسخه" />
                </StackPanel>
                <Grid Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="5"
                               VerticalAlignment="Center" Style="{StaticResource TextBlockSubTitle}"
                               Text="نسخه فعلی نرم افزار" />

                    <Label Grid.Row="1" Grid.Column="2" Margin="5"
                               FontSize="15" Style="{StaticResource LabelInfo}"
                               Foreground="Green"
                               Content="{Binding ElementName=AppVersion, Path=Content}" />
                    <Button x:Name="btnCheckUpdate" Click="btnCheckUpdate_Click" Margin="5" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Width="235" Style="{StaticResource ButtonInfo}" Height="35">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Image Height="16" Width="16" Margin="0,0,30,0" Source="/Resources/update.png" />
                            <TextBlock TextWrapping="NoWrap" Text="بررسی برای نسخه جدید" FontSize="13" Foreground="#ffffff" />
                        </StackPanel>
                    </Button>
                    <Label Name="txtNewVersion" Grid.Row="2" Grid.Column="2" Margin="5"
                               FontSize="15" Style="{StaticResource LabelInfo}"
                               Foreground="Green" />
                </Grid>
                <Grid>
                    <TextBox Name="txtChangeLog" Visibility="Hidden" IsReadOnly="True" TextWrapping="WrapWithOverflow" />
                </Grid>
                <TextBox Name="txtHistory" IsReadOnly="True" TextWrapping="WrapWithOverflow" Margin="10,10" Height="200" />
            </StackPanel>
        </controls:ScrollViewer>
    </controls:TransitioningContentControl>
</UserControl>