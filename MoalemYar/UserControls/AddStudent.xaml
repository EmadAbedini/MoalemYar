<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoalemYar.UserControls"
             xmlns:Metro="clr-namespace:Arthas.Controls.Metro;assembly=Arthas"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
    x:Class="MoalemYar.UserControls.AddStudent"
             mc:Ignorable="d" 
             Style="{StaticResource myUserControl}"
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>

        <Metro:MetroTabControl Focusable="False" x:Name="tabc" IsTabStop="True" TabIndex="-1" SelectionChanged="tabc_SelectionChanged">
            <Metro:MetroTabItem Header="ثبت اطلاعات">
                <Grid KeyboardNavigation.TabNavigation="Cycle">
                    <Metro:MetroScrollViewer>
                        <Metro:MetroWaterfallFlow x:Name="waterfallFlow" ListWidth="300">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Metro:MetroButton x:Name="btnSave" Click="btnSave_Click" Focusable="False" Grid.Column="0" Grid.Row="0" Margin="10,5" Content="ذخیره" MetroButtonState="DarkGreen" />
                                <Metro:MetroButton Focusable="False" x:Name="btnCancel" Click="btnCancel_Click" Grid.Column="1" Grid.Row="0" Margin="10,5" Content="انصراف" MetroButtonState="Red2" />
                            </Grid>
                        </Metro:MetroWaterfallFlow>
                    </Metro:MetroScrollViewer>
                    <Metro:MetroBorder HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="{Binding BorderColor}" Margin="167,63,212,0" VerticalAlignment="Top" />
                    <Grid Margin="0,88,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Metro:MetroTextBox x:Name="txtAddName" TabIndex="0" Margin="10,10,5,0" InputHint="نام" Height="30" Grid.Column="0" PopupHint="نام دانش آموز" MetroPopupBackgroundState="DarkRed" VerticalAlignment="Top" />
                        <Metro:MetroTextBox x:Name="txtAddLName" TabIndex="1" InputHint="نام خانوادگی" Grid.Column="0"  PopupHint="نام خانوادگی دانش آموز" MetroPopupBackgroundState="DarkRed"  Height="30" VerticalAlignment="Top" Margin="10,45,5,0" />
                        <Metro:MetroTextBox x:Name="txtAddFName" TabIndex="2" InputHint="نام پدر" Height="30" Grid.Column="0" PopupHint="نام پدر دانش آموز" MetroPopupBackgroundState="DarkRed" VerticalAlignment="Top" Margin="10,80,5,0" />
                        <Metro:MetroImage ImageHeight="250" ImageWidth="250" Stretch="Fill" x:Name="imgStudent" Grid.Column="1" Source="..\Resources\Choose.png" Content="MetroImage" RenderTransformOrigin="0.5,0.5" Height="180" VerticalAlignment="Top" HorizontalAlignment="Right" Width="203" Margin="0,0,10,0"/>
                        <Metro:MetroButton x:Name="btnChoose" Click="btnChoose_Click" Focusable="False" Grid.Column="1"  Content="انتخاب عکس" MetroButtonState="DarkGreen" Height="46" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172" Margin="10,15,0,0" />
                        <ContentControl x:Name="cmbAddContentGender" TabIndex="3" Focusable="False" Grid.Column="0" Height="30" VerticalAlignment="Top" Margin="10,115,5,0">
                            <ContentControl.ContentTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ComboBox SelectionChanged="cmbGender_SelectionChanged" TabIndex="4" x:Name="cmbGender">
                                            <ComboBoxItem Content="پسر" />
                                            <ComboBoxItem Content="دختر" />
                                        </ComboBox>
                                        <TextBlock x:Name="tb" Text=" جنسیت " IsHitTestVisible="False" Visibility="Hidden" />
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <Trigger SourceName="cmbGender" Property="SelectedItem" Value="{x:Null}">
                                            <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                        </Trigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                       
                        <ComboBox x:Name="cmbBase" Height="30" ItemsSource="{Binding School}"
                            SelectedValue ="{Binding SchoolName}" DisplayMemberPath="SchoolName"
                            SelectedValuePath="Id" Margin="10,150,5,0" VerticalAlignment="Top">
                            <ComboBox.Template>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <ComboBox x:Name="cb" Height="30"
                                            DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}" 
                                            ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource TemplatedParent}}"
                                            SelectedValue ="{Binding SelectedValue, RelativeSource={RelativeSource TemplatedParent}}" 
                                            DisplayMemberPath="SchoolName"
                                            SelectedValuePath="Id"> 
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SchoolName}"/>
                                                        <TextBlock Text=" - "/>
                                                        <TextBlock Text="{Binding Base}"/>
                                                        <TextBlock Text=" - "/>
                                                        <TextBlock Text="{Binding Year}"/>
                                                    </StackPanel>


                                                </DataTemplate>

                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock x:Name="tb" Text="انتخاب کلاس" Margin="3,3,0,0" IsHitTestVisible="False" Visibility="Hidden"/>
                                        
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger SourceName="cb" Property="SelectedItem" Value="{x:Null}">
                                            <Setter TargetName="tb" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ComboBox.Template>
                        </ComboBox>

                    </Grid>

                </Grid>
            </Metro:MetroTabItem>
            <Metro:MetroTabItem Header="ویرایش اطلاعات">
                <Grid KeyboardNavigation.TabNavigation="Cycle">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Metro:MetroWaterfallFlow Margin="10,10,10,10" ListWidth="400">
                        <Grid FlowDirection="LeftToRight">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Metro:MetroTextBox x:Name="txtEditSearch" ButtonTitle="بروزرسانی لیست" ButtonClick="txtEditSearch_ButtonClick"  TabIndex="0" Grid.Row="0" FlowDirection="RightToLeft" InputHint="جستجو..." PopupHint="جستجو بصورت خودکار انجام می شود" MetroPopupBackgroundState="Red2" Margin="0,0,0,0" Icon="../Resources/editIcon.png" TextChanged="txtEditSearch_TextChanged" />
                            <ListView FlowDirection="RightToLeft" Grid.Row="1" SelectionMode="Single" x:Name="dgv" Margin="12,0,10,-81" SelectionChanged="dgv_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="نام" Width="100" DisplayMemberBinding="{Binding Name}" />
                                        <GridViewColumn Header="نام خانوادگی" Width="100"  DisplayMemberBinding="{Binding LName}" />
                                        <GridViewColumn Header="نام پدر" Width="100" DisplayMemberBinding="{Binding FName}" />
                                        <GridViewColumn Header="جنسیت" Width="100" DisplayMemberBinding="{Binding Gender}" />
                                        <GridViewColumn Header="پایه" Width="100" DisplayMemberBinding="{Binding BaseId}" />
                                        <GridViewColumn Header="Id" Width="0"  DisplayMemberBinding="{Binding Id}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Metro:MetroWaterfallFlow>
                    <Grid x:Name="editGrid" IsEnabled="False" Grid.Column="1">
                        <Grid Margin="10,20,20,0" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />

                            </Grid.RowDefinitions>

                            <Metro:MetroTextBox Margin="5" x:Name="txtName" TabIndex="1" Grid.Row="0" InputHint="نام" Height="30" PopupHint="نام دانش آموز" MetroPopupBackgroundState="DarkRed" VerticalAlignment="Top" />
                            <Metro:MetroTextBox Margin="5" x:Name="txtLName" TabIndex="2" Grid.Row="1" InputHint="نام خانوادگی" PopupHint="نام خانوادگی دانش آموز" MetroPopupBackgroundState="DarkRed" Height="30" VerticalAlignment="Top" />
                            <Metro:MetroTextBox Margin="5" x:Name="txtFName" TabIndex="3" Grid.Row="2" InputHint="نام پدر" Height="30" PopupHint="نام پدر دانش آموز" MetroPopupBackgroundState="DarkRed" VerticalAlignment="Top" />
                            <ContentControl Margin="5" x:Name="cmbContentGender" TabIndex="4" Focusable="False" Grid.Row="3" Height="30" VerticalAlignment="Top">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ComboBox TabIndex="4" x:Name="cmbGender">
                                                <ComboBoxItem Content="پسر" />
                                                <ComboBoxItem Content="دختر" />
                                            </ComboBox>
                                            <TextBlock x:Name="tb" Text=" جنسیت " IsHitTestVisible="False" Visibility="Hidden" />
                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <Trigger SourceName="cmbGender" Property="SelectedItem" Value="{x:Null}">
                                                <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                            </Trigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                            <ContentControl Margin="5" x:Name="cmbContentBase" TabIndex="5" Focusable="False" Grid.Row="4" Height="30" VerticalAlignment="Top">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ComboBox TabIndex="4" x:Name="cmbBase">
                                                <ComboBoxItem Content="اول" />
                                                <ComboBoxItem Content="دوم" />
                                                <ComboBoxItem Content="سوم" />
                                                <ComboBoxItem Content="چهارم" />
                                                <ComboBoxItem Content="پنجم" />
                                                <ComboBoxItem Content="ششم" />
                                            </ComboBox>
                                            <TextBlock x:Name="tb" Text=" انتخاب پایه " IsHitTestVisible="False" Visibility="Hidden" />
                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <Trigger SourceName="cmbBase" Property="SelectedItem" Value="{x:Null}">
                                                <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                            </Trigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                            <Grid Grid.Row="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Metro:MetroButton x:Name="btnEditSave" Click="btnEditSave_Click" Focusable="False" Grid.Row="0" Grid.Column="0" Margin="10,5" Content="ذخیره" MetroButtonState="DarkGreen" />
                                <Metro:MetroButton x:Name="btnEditCancel" Click="btnEditCancel_Click" Focusable="False" Grid.Row="0" Grid.Column="1" Margin="10,5" Content="انصراف" MetroButtonState="Red2" />
                                <Metro:MetroButton x:Name="btnDelete" Click="btnDelete_Click" Focusable="False" Grid.Row="1" Margin="10,5" Content="حذف" MetroButtonState="DarkRed" Grid.ColumnSpan="2" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Metro:MetroTabItem>
        </Metro:MetroTabControl>
    </Grid>
</UserControl>
