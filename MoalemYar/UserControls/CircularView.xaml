<UserControl
    x:Class="MoalemYar.UserControls.CircularView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MoalemYar.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    Style="{StaticResource myUserControl}"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <controls:TransitioningContentControl>
        <controls:ScrollViewer HorizontalScrollBarVisibility="Auto">
            <Grid>

                <StackPanel
                    Height="56"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnStop"
                        Width="134"
                        Height="35"
                        Margin="20,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Click="btnStop_Click"
                        Style="{StaticResource ButtonInfo}">
                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Name="img"
                                Width="16"
                                Height="16"
                                Margin="10,0,30,0"
                                Source="/Resources/stop.png" />
                            <TextBlock
                                Name="txtStop"
                                FontSize="13"
                                Foreground="#ffffff"
                                Text="توقف"
                                TextWrapping="NoWrap" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        Style="{StaticResource TextBlockSubTitle}"
                        Text="دریافت 20 بخشنامه آخر" />
                    <ToggleButton
                        Name="swLimit"
                        Margin="10"
                        Checked="MetroSwitch_Checked"
                        FlowDirection="LeftToRight"
                        IsChecked="True"
                        Style="{StaticResource ToggleButtonSwitch}"
                        Unchecked="MetroSwitch_Checked" />
                </StackPanel>
                <TextBox
                    Name="txtSearch"
                    Height="30"
                    Margin="391,10,40,0"
                    VerticalAlignment="Top"
                    IsEnabled="False"
                    TextChanged="MetroTextBox_TextChanged" />

                <ProgressBar
                    Name="prgUpdate"
                    Margin="20,56,40,0"
                    VerticalAlignment="Top"
                    FlowDirection="LeftToRight"
                    Style="{StaticResource ProgressBarDanger}"
                    ValueChanged="prgUpdate_ValueChanged" />
                <WrapPanel
                    x:Name="waterfallFlow"
                    Width="1000"
                    Margin="20,85,20,10" />
            </Grid>
        </controls:ScrollViewer>
    </controls:TransitioningContentControl>
</UserControl>