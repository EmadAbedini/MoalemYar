<UserControl x:Class="MoalemYar.UserControls.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoalemYar.UserControls"
             xmlns:Metro="clr-namespace:Arthas.Controls.Metro;assembly=Arthas"
             mc:Ignorable="d" 
             Style="{StaticResource myUserControl}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Metro:MetroWaterfallFlow x:Name="waterfallFlow" ListWidth="300">
            <Grid>
                <Metro:MetroGroupBox Margin="5" Header="عمومی">
                    <StackPanel>
                        <Metro:MetroSwitch x:Name="swLogin" Content="ورود با استفاده از رمز عبور" Margin="10" />
                        <Metro:MetroSwitch x:Name="swSystem" Content="سیستم توصیفی/عددی"  Margin="10" />
                        <Metro:MetroSwitch x:Name="swAutoStart" Content="اجرای خودکار همراه با ویندوز"  Margin="10" />
                    </StackPanel>
                </Metro:MetroGroupBox>
            </Grid>
            <Grid>
                <Metro:MetroGroupBox Margin="5" Header="پوسته">
                    <StackPanel>
                        <WrapPanel Orientation="Horizontal">
                            <Metro:MetroColorPicker Margin="10" x:Name="color1" Width="50" Height="50" Background="#6D819A" DefaultColor="#6D819A" Padding="5" />
                        </WrapPanel>
                        <Metro:MetroSwitch Margin="19" Name="Hamborger_Menu" Content="منوی همبرگری همواره باز باشد"></Metro:MetroSwitch>
                    </StackPanel>
                </Metro:MetroGroupBox>
            </Grid>
            <Grid>
                <Metro:MetroGroupBox Margin="5" Header="کمک به بهبود برنامه">
                    <StackPanel>
                        <Metro:MetroSwitch Margin="19" IsChecked="True" Content="ارسال خودکار خطاهای برنامه به سازنده"></Metro:MetroSwitch>
                    </StackPanel>
                </Metro:MetroGroupBox>
            </Grid>
        </Metro:MetroWaterfallFlow>
    </Grid>
</UserControl>
