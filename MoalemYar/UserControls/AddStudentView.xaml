<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MoalemYar.UserControls"
             xmlns:local1="clr-namespace:MoalemYar"
             xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
             mc:Ignorable="d"
    x:Class="MoalemYar.UserControls.AddStudentView"
             Style="{StaticResource myUserControl}">
    <controls:TransitioningContentControl>
        <controls:ScrollViewer HorizontalScrollBarVisibility="Auto">
            <controls:TabControl Name="tabc" IsEnableAnimation="True" IsDraggable="True" IsEnableTabFill="True" Width="800" SelectionChanged="tabc_SelectionChanged">
                <controls:TabItem IsSelected="True" Header="ثبت اطلاعات">
                    <Grid KeyboardNavigation.TabNavigation="Cycle">
                        <StackPanel Orientation="Vertical" Margin="5,5,5,0">
                            <Grid HorizontalAlignment="Stretch" Margin="5,5,5,0">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnSave" IsDefault="True" Click="btnSave_Click" Grid.Column="0"
                                            Grid.Row="0" Margin="10,5" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                            Width="140" Style="{StaticResource ButtonSuccess}" Height="35">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Image Height="16" Width="16" Margin="-30,0,30,0" Source="/Resources/add.png" />
                                            <TextBlock TextWrapping="NoWrap" Text="ذخیره" FontSize="13" Foreground="#ffffff" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="btnCancel" IsCancel="True" Click="btnCancel_Click" Grid.Column="1" Grid.Row="0"
                                            Margin="10,5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" 
                                            Style="{StaticResource ButtonInfo}" Height="35">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Image Height="16" Width="16" Margin="-30,0,30,0" Source="/Resources/cancel.png" />
                                            <TextBlock TextWrapping="NoWrap" Text="انصراف" FontSize="13" Foreground="#ffffff" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <GridSplitter Height="2" Margin="60,45,96,-7" HorizontalAlignment="Stretch" />
                            </Grid>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,5,0,0">
                                    <controls:InfoTextBox FlowDirection="RightToLeft" MaxLength="20" x:Name="txtAddName" Margin="2" TabIndex="0" PlaceHolder="نام" Height="30" VerticalAlignment="Top" />
                                    <controls:InfoTextBox FlowDirection="RightToLeft" MaxLength="20" x:Name="txtAddLName" Margin="2" TabIndex="1" PlaceHolder="نام خانوادگی" Height="30" VerticalAlignment="Top" />
                                    <controls:InfoTextBox FlowDirection="RightToLeft" MaxLength="20" x:Name="txtAddFName" Margin="2" TabIndex="2" PlaceHolder="نام پدر" Height="30" VerticalAlignment="Top" />
                                    <ContentControl x:Name="cmbAddContentGender" TabIndex="3" Focusable="False" Height="30" VerticalAlignment="Top" Margin="2" HorizontalAlignment="Left" Width="200">
                                        <ContentControl.ContentTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <ComboBox SelectionChanged="cmbGender_SelectionChanged" TabIndex="4" x:Name="cmbGender">
                                                        <ComboBoxItem Content="پسر" />
                                                        <ComboBoxItem Content="دختر" />
                                                    </ComboBox>
                                                    <TextBlock x:Name="tb" Text=" جنسیت " IsHitTestVisible="False" Visibility="Hidden" />
                                                </Grid>
                                                <DataTemplate.Triggers>
                                                    <Trigger SourceName="cmbGender" Property="SelectedItem" Value="{x:Null}">
                                                        <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                                    </Trigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ContentControl.ContentTemplate>
                                    </ContentControl>
                                    <Grid Margin="2">
                                        <ComboBox x:Name="cmbBase" ItemsSource="{Binding}"
                                       SelectedValue="{Binding SchoolName}"
                                       SelectedValuePath="Id"   TabIndex="4"
                                       VerticalAlignment="Top" HorizontalAlignment="Left" Width="200">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SchoolName}" />
                                                        <TextBlock Text=" - " />
                                                        <TextBlock Text="{Binding Base}" />
                                                        <TextBlock Text=" - " />
                                                        <TextBlock Text="{Binding Year}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock Text=" انتخاب کلاس " IsHitTestVisible="False" HorizontalAlignment="Left" Width="200">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Hidden" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=cmbBase,Path=SelectedItem}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>
                                <Grid Grid.Column="1">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                        <!--<controls:ImageBrowser VerticalAlignment="Top" x:Name="imgStudent" Height="200" Width="200" />-->
                                        <Button x:Name="btnChoose" Click="btnChoose_Click" TabIndex="5" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Style="{StaticResource ButtonDanger}" Height="35">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <Image Height="16" Width="16" Margin="10,0,30,0" Source="/Resources/open.png" />
                                                <TextBlock TextWrapping="NoWrap" Text="انتخاب عکس" FontSize="13" Foreground="#ffffff" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </controls:TabItem>
                <controls:TabItem IsSelected="True" Header="ویرایش اطلاعات">
                    <Grid KeyboardNavigation.TabNavigation="Cycle">
                        <StackPanel Orientation="Vertical" Margin="5,5,5,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top">
                                    <Button x:Name="btnEditSave" IsDefault="True" Click="btnEditSave_Click" Grid.Column="0"
                                            Grid.Row="0" Margin="10,5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" 
                                            Style="{StaticResource ButtonSuccess}" Height="35">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Image Height="16" Width="16" Margin="-30,0,30,0" Source="/Resources/update.png" />
                                            <TextBlock TextWrapping="NoWrap" Text="ذخیره" FontSize="13" Foreground="#ffffff" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="btnDelete" Click="btnDelete_Click" Grid.Column="1"  Grid.ColumnSpan="2" Grid.Row="1"
                                            Margin="5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140"
                                            Style="{StaticResource ButtonDanger}" Height="35">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Image Height="16" Width="16" Margin="-30,0,30,0" Source="/Resources/Delete.png" />
                                            <TextBlock TextWrapping="NoWrap" Text="حذف" FontSize="13" Foreground="#ffffff" />
                                        </StackPanel>
                                    </Button>


                                    <Button x:Name="btnEditCancel" IsCancel="True" Click="btnEditCancel_Click" Grid.Column="1"
                                            Grid.Row="0" Margin="10,5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" 
                                            Style="{StaticResource ButtonInfo}" Height="35">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Image Height="16" Width="16" Margin="-30,0,30,0" Source="/Resources/cancel.png" RenderTransformOrigin="-1.688,0.625" />
                                            <TextBlock TextWrapping="NoWrap" Text="انصراف" FontSize="13" Foreground="#ffffff" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <GridSplitter Height="2" Margin="60,45,96,-7" HorizontalAlignment="Stretch" />
                            </Grid>
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" Margin="10,0" FlowDirection="RightToLeft" x:Name="cmbBaseEdit" SelectionChanged="cmbBaseEdit_SelectionChanged"
                            SelectedValue="{Binding SchoolName}" SelectedValuePath="Id" TabIndex="0"
                            Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="190">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding SchoolName}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding Base}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding Year}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <TextBlock Text=" انتخاب کلاس " Margin="10,0" FlowDirection="RightToLeft" IsHitTestVisible="False"  Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="190">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Hidden" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedItem, ElementName=cmbBaseEdit}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Grid Name="grdedit" Grid.Column="0" Margin="0,35,10,5">
                                        <StackPanel Orientation="Vertical">
                                            <TextBox TabIndex="1" MaxLength="40" x:Name="txtEditSearch" HorizontalAlignment="Stretch" MaxWidth="{Binding Path=ActualWidth, ElementName=grdedit, Converter={local1:MultiplyConverter Multiplier=.9}}" VerticalAlignment="Top" FlowDirection="RightToLeft" TextChanged="txtEditSearch_TextChanged" />
                                            <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch"
                                      Background="#eceff5" RowHeaderWidth="0" AlternatingRowBackground="#fbfcfe" MaxWidth="{Binding Path=ActualWidth, ElementName=grdedit, Converter={local1:MultiplyConverter Multiplier=.9}}"
                                      GridLinesVisibility="Horizontal" CanUserReorderColumns="False" TabIndex="2"
                                      CanUserResizeColumns="False" CanUserSortColumns="True" SelectionMode="Single" SelectionUnit="FullRow"
                                      CanUserResizeRows="False" IsReadOnly="True" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}"
                                      HorizontalGridLinesBrush="#dde8ef" CellStyle="{DynamicResource DataGridCellStyle}"
                                      Margin="0,5" SelectionChanged="dataGrid_SelectionChanged">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Binding="{Binding Id}" Visibility="Hidden" />
                                                    <DataGridTextColumn Binding="{Binding Name}" Header="نام" MinWidth="100" Width="*" />
                                                    <DataGridTextColumn Binding="{Binding LName}" Header="نام خانوادگی" MinWidth="100" Width="*" />
                                                    <DataGridTextColumn Binding="{Binding FName}" Header="نام پدر" MinWidth="100" Width="*" />
                                                    <DataGridTextColumn Binding="{Binding Gender}" Header="جنسیت" MinWidth="100" Width="*" />
                                                    <DataGridTextColumn Binding="{Binding Base}" Header="پایه" Width="*" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1" Margin="5,0,0,0">
                                        <StackPanel Name="editStack" IsEnabled="False" Orientation="Vertical">
                                            <controls:InfoTextBox FlowDirection="RightToLeft" MaxLength="20" x:Name="txtName" Margin="2" TabIndex="0" PlaceHolder="نام" Height="30" VerticalAlignment="Top" />
                                            <controls:InfoTextBox FlowDirection="RightToLeft" MaxLength="20" x:Name="txtLName" Margin="2" TabIndex="1" PlaceHolder="نام خانوادگی" Height="30" VerticalAlignment="Top" />
                                            <controls:InfoTextBox FlowDirection="RightToLeft" MaxLength="20" x:Name="txtFName" Margin="2" TabIndex="2" PlaceHolder="نام پدر" Height="30" VerticalAlignment="Top" />
                                            <StackPanel Orientation="Horizontal" Margin="2">
                                                <ContentControl x:Name="cmbContentGender" TabIndex="3" Focusable="False" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180">
                                                    <ContentControl.ContentTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <ComboBox SelectionChanged="cmbGender_SelectionChanged" TabIndex="4" x:Name="cmbGender">
                                                                    <ComboBoxItem Content="پسر" />
                                                                    <ComboBoxItem Content="دختر" />
                                                                </ComboBox>
                                                                <TextBlock x:Name="tb" Text=" جنسیت " IsHitTestVisible="False" Visibility="Hidden" />
                                                            </Grid>
                                                            <DataTemplate.Triggers>
                                                                <Trigger SourceName="cmbGender" Property="SelectedItem" Value="{x:Null}">
                                                                    <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                                                </Trigger>
                                                            </DataTemplate.Triggers>
                                                        </DataTemplate>
                                                    </ContentControl.ContentTemplate>
                                                </ContentControl>
                                                <ComboBox x:Name="cmbEditBase" Margin="10,0,0,0" Height="30" TabIndex="4"
                                            SelectedValue ="{Binding SchoolName}" DisplayMemberPath="SchoolName"
                                            SelectedValuePath="Id" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180">
                                                    <ComboBox.Template>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Grid>
                                                                <ComboBox x:Name="cb" Height="30"
                                            DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                            ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource TemplatedParent}}"
                                            SelectedValue ="{Binding SelectedValue, RelativeSource={RelativeSource TemplatedParent}}"
                                            DisplayMemberPath="SchoolName"
                                            SelectedValuePath="Id">
                                                                    <ComboBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <TextBlock Text="{Binding SchoolName}" />
                                                                                <TextBlock Text=" - " />
                                                                                <TextBlock Text="{Binding Base}" />
                                                                                <TextBlock Text=" - " />
                                                                                <TextBlock Text="{Binding Year}" />
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </ComboBox.ItemTemplate>
                                                                </ComboBox>
                                                                <TextBlock x:Name="tb" Text="کلاس" Margin="3,3,0,0" IsHitTestVisible="False" Visibility="Hidden" />
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger SourceName="cb" Property="SelectedItem" Value="{x:Null}">
                                                                    <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </ComboBox.Template>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                                <!--<controls:ImageBrowser TabIndex="6" x:Name="imgEditStudent" Height="200" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" />-->
                                                <Button x:Name="btnEditChoose" Click="btnEditChoose_Click" TabIndex="5" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Style="{StaticResource ButtonDanger}" Height="35">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                        <Image Height="16" Width="16" Margin="10,0,30,0" Source="/Resources/open.png" />
                                                        <TextBlock TextWrapping="NoWrap" Text="انتخاب عکس" FontSize="13" Foreground="#ffffff" />
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </controls:TabItem>
            </controls:TabControl>
        </controls:ScrollViewer>
    </controls:TransitioningContentControl>
</UserControl>