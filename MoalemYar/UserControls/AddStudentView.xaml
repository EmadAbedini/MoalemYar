<UserControl
    x:Class="MoalemYar.UserControls.AddStudentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MoalemYar.UserControls"
    xmlns:local1="clr-namespace:MoalemYar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource myUserControl}"
    mc:Ignorable="d">
    <controls:TransitioningContentControl>
        <controls:ScrollViewer HorizontalScrollBarVisibility="Auto">
            <controls:TabControl
                Name="tabc"
                MinWidth="800"
                IsDraggable="True"
                IsEnableAnimation="True"
                IsEnableTabFill="True"
                SelectionChanged="tabc_SelectionChanged">
                <controls:TabItem Header="ثبت اطلاعات" IsSelected="True">
                    <Grid KeyboardNavigation.TabNavigation="Cycle">
                        <StackPanel Margin="5,5,5,0" Orientation="Vertical">
                            <Grid Margin="5,5,5,0" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        x:Name="btnSave"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Width="140"
                                        Height="35"
                                        Margin="10,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Click="btnSave_Click"
                                        IsDefault="True"
                                        Style="{StaticResource ButtonSuccess}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="-30,0,30,0"
                                                Source="/Resources/add.png" />
                                            <TextBlock
                                                FontSize="13"
                                                Foreground="#ffffff"
                                                Text="ذخیره"
                                                TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        x:Name="btnCancel"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="140"
                                        Height="35"
                                        Margin="10,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Click="btnCancel_Click"
                                        IsCancel="True"
                                        Style="{StaticResource ButtonInfo}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="-30,0,30,0"
                                                Source="/Resources/cancel.png" />
                                            <TextBlock
                                                FontSize="13"
                                                Foreground="#ffffff"
                                                Text="انصراف"
                                                TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <GridSplitter
                                    Height="2"
                                    Margin="60,45,96,-7"
                                    HorizontalAlignment="Stretch" />
                            </Grid>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.Column="0"
                                    Margin="0,5,0,0"
                                    Orientation="Vertical">
                                    <controls:InfoTextBox
                                        x:Name="txtAddName"
                                        Height="30"
                                        Margin="2"
                                        VerticalAlignment="Top"
                                        FlowDirection="RightToLeft"
                                        MaxLength="20"
                                        PlaceHolder="نام"
                                        TabIndex="0" />
                                    <controls:InfoTextBox
                                        x:Name="txtAddLName"
                                        Height="30"
                                        Margin="2"
                                        VerticalAlignment="Top"
                                        FlowDirection="RightToLeft"
                                        MaxLength="20"
                                        PlaceHolder="نام خانوادگی"
                                        TabIndex="1" />
                                    <controls:InfoTextBox
                                        x:Name="txtAddFName"
                                        Height="30"
                                        Margin="2"
                                        VerticalAlignment="Top"
                                        FlowDirection="RightToLeft"
                                        MaxLength="20"
                                        PlaceHolder="نام پدر"
                                        TabIndex="2" />
                                    <ContentControl
                                        x:Name="cmbAddContentGender"
                                        Width="200"
                                        Height="30"
                                        Margin="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Focusable="False"
                                        TabIndex="3">
                                        <ContentControl.ContentTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <ComboBox x:Name="cmbGender" TabIndex="4">
                                                        <ComboBoxItem Content="پسر" />
                                                        <ComboBoxItem Content="دختر" />
                                                    </ComboBox>
                                                    <TextBlock
                                                        x:Name="tb"
                                                        IsHitTestVisible="False"
                                                        Text=" جنسیت "
                                                        Visibility="Hidden" />
                                                </Grid>
                                                <DataTemplate.Triggers>
                                                    <Trigger SourceName="cmbGender" Property="SelectedItem" Value="{x:Null}">
                                                        <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                                    </Trigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ContentControl.ContentTemplate>
                                    </ContentControl>
                                    <Grid Margin="2">
                                        <ComboBox
                                            x:Name="cmbBase"
                                            Width="200"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ItemsSource="{Binding}"
                                            SelectedValue="{Binding SchoolName}"
                                            SelectedValuePath="Id"
                                            TabIndex="4">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SchoolName}" />
                                                        <TextBlock Text=" - " />
                                                        <TextBlock Text="{Binding Base}" />
                                                        <TextBlock Text=" - " />
                                                        <TextBlock Text="{Binding Year}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock
                                            Width="200"
                                            HorizontalAlignment="Left"
                                            IsHitTestVisible="False"
                                            Text=" انتخاب کلاس ">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Hidden" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=cmbBase, Path=SelectedItem}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>
                                <Grid Grid.Column="1">
                                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                                        <Image
                                            x:Name="imgStudent"
                                            Width="200"
                                            Height="200"
                                            VerticalAlignment="Top"
                                            Source="/Resources/Choose.png" />
                                        <Button
                                            x:Name="btnChoose"
                                            Width="200"
                                            Height="35"
                                            Margin="10,5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Click="btnChoose_Click"
                                            Style="{StaticResource ButtonPrimary}"
                                            TabIndex="5">
                                            <StackPanel
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <Image
                                                    Width="16"
                                                    Height="16"
                                                    Margin="-30,0,30,0"
                                                    Source="/Resources/open.png" />
                                                <TextBlock
                                                    FontSize="13"
                                                    Foreground="#ffffff"
                                                    Text="انتخاب عکس"
                                                    TextWrapping="NoWrap" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </controls:TabItem>
                <controls:TabItem Header="ویرایش اطلاعات" IsSelected="True">
                    <Grid KeyboardNavigation.TabNavigation="Cycle">
                        <StackPanel Margin="5,5,5,0" Orientation="Vertical">
                            <Grid>
                                <StackPanel
                                    Height="50"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <Button
                                        x:Name="btnEditSave"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Width="140"
                                        Height="35"
                                        Margin="10,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Click="btnEditSave_Click"
                                        IsDefault="True"
                                        Style="{StaticResource ButtonSuccess}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="-30,0,30,0"
                                                Source="/Resources/update.png" />
                                            <TextBlock
                                                FontSize="13"
                                                Foreground="#ffffff"
                                                Text="ذخیره"
                                                TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        x:Name="btnDelete"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2"
                                        Width="140"
                                        Height="35"
                                        Margin="5,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Click="btnDelete_Click"
                                        Style="{StaticResource ButtonDanger}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="-30,0,30,0"
                                                Source="/Resources/Delete.png" />
                                            <TextBlock
                                                FontSize="13"
                                                Foreground="#ffffff"
                                                Text="حذف"
                                                TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Button>


                                    <Button
                                        x:Name="btnEditCancel"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="140"
                                        Height="35"
                                        Margin="10,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Click="btnEditCancel_Click"
                                        IsCancel="True"
                                        Style="{StaticResource ButtonInfo}">
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Image
                                                Width="16"
                                                Height="16"
                                                Margin="-30,0,30,0"
                                                RenderTransformOrigin="-1.688,0.625"
                                                Source="/Resources/cancel.png" />
                                            <TextBlock
                                                FontSize="13"
                                                Foreground="#ffffff"
                                                Text="انصراف"
                                                TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <GridSplitter
                                    Height="2"
                                    Margin="60,45,96,-7"
                                    HorizontalAlignment="Stretch" />
                            </Grid>
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox
                                        x:Name="cmbBaseEdit"
                                        Grid.Column="0"
                                        Width="190"
                                        Height="30"
                                        Margin="10,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FlowDirection="RightToLeft"
                                        SelectedValue="{Binding SchoolName}"
                                        SelectedValuePath="Id"
                                        SelectionChanged="cmbBaseEdit_SelectionChanged"
                                        TabIndex="0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding SchoolName}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding Base}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding Year}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <TextBlock
                                        Width="190"
                                        Height="30"
                                        Margin="10,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FlowDirection="RightToLeft"
                                        IsHitTestVisible="False"
                                        Text=" انتخاب کلاس ">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Hidden" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedItem, ElementName=cmbBaseEdit}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Grid
                                        Name="grdedit"
                                        Grid.Column="0"
                                        Margin="0,35,10,5">
                                        <StackPanel Orientation="Vertical">
                                            <TextBox
                                                x:Name="txtEditSearch"
                                                MaxWidth="{Binding Path=ActualWidth, ElementName=grdedit, Converter={local1:MultiplyConverter Multiplier=.9}}"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Top"
                                                FlowDirection="RightToLeft"
                                                MaxLength="40"
                                                TabIndex="1"
                                                TextChanged="txtEditSearch_TextChanged" />
                                            <DataGrid
                                                x:Name="dataGrid"
                                                MaxWidth="{Binding Path=ActualWidth, ElementName=grdedit, Converter={local1:MultiplyConverter Multiplier=.9}}"
                                                Margin="0,5"
                                                HorizontalAlignment="Stretch"
                                                AlternatingRowBackground="#fbfcfe"
                                                AutoGenerateColumns="False"
                                                Background="#eceff5"
                                                CanUserReorderColumns="False"
                                                CanUserResizeColumns="False"
                                                CanUserResizeRows="False"
                                                CanUserSortColumns="True"
                                                CellStyle="{DynamicResource DataGridCellStyle}"
                                                ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}"
                                                GridLinesVisibility="Horizontal"
                                                HorizontalGridLinesBrush="#dde8ef"
                                                IsReadOnly="True"
                                                RowHeaderWidth="0"
                                                SelectionChanged="dataGrid_SelectionChanged"
                                                SelectionMode="Single"
                                                SelectionUnit="FullRow"
                                                TabIndex="2">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Binding="{Binding Id}" Visibility="Hidden" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        MinWidth="100"
                                                        Binding="{Binding Name}"
                                                        Header="نام" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        MinWidth="100"
                                                        Binding="{Binding LName}"
                                                        Header="نام خانوادگی" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        MinWidth="100"
                                                        Binding="{Binding FName}"
                                                        Header="نام پدر" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        MinWidth="100"
                                                        Binding="{Binding Gender}"
                                                        Header="جنسیت" />
                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Base}"
                                                        Header="پایه" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1" Margin="5,0,0,0">
                                        <StackPanel
                                            Name="editStack"
                                            IsEnabled="False"
                                            Orientation="Vertical">
                                            <controls:InfoTextBox
                                                x:Name="txtName"
                                                Height="30"
                                                Margin="2"
                                                VerticalAlignment="Top"
                                                FlowDirection="RightToLeft"
                                                MaxLength="20"
                                                PlaceHolder="نام"
                                                TabIndex="0" />
                                            <controls:InfoTextBox
                                                x:Name="txtLName"
                                                Height="30"
                                                Margin="2"
                                                VerticalAlignment="Top"
                                                FlowDirection="RightToLeft"
                                                MaxLength="20"
                                                PlaceHolder="نام خانوادگی"
                                                TabIndex="1" />
                                            <controls:InfoTextBox
                                                x:Name="txtFName"
                                                Height="30"
                                                Margin="2"
                                                VerticalAlignment="Top"
                                                FlowDirection="RightToLeft"
                                                MaxLength="20"
                                                PlaceHolder="نام پدر"
                                                TabIndex="2" />
                                            <StackPanel Margin="2" Orientation="Horizontal">
                                                <ContentControl
                                                    x:Name="cmbContentGender"
                                                    Width="180"
                                                    Height="30"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Focusable="False"
                                                    TabIndex="3">
                                                    <ContentControl.ContentTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <ComboBox x:Name="cmbGender" TabIndex="4">
                                                                    <ComboBoxItem Content="پسر" />
                                                                    <ComboBoxItem Content="دختر" />
                                                                </ComboBox>
                                                                <TextBlock
                                                                    x:Name="tb"
                                                                    IsHitTestVisible="False"
                                                                    Text=" جنسیت "
                                                                    Visibility="Hidden" />
                                                            </Grid>
                                                            <DataTemplate.Triggers>
                                                                <Trigger SourceName="cmbGender" Property="SelectedItem" Value="{x:Null}">
                                                                    <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                                                </Trigger>
                                                            </DataTemplate.Triggers>
                                                        </DataTemplate>
                                                    </ContentControl.ContentTemplate>
                                                </ContentControl>
                                                <ComboBox
                                                    x:Name="cmbEditBase"
                                                    Width="180"
                                                    Height="30"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    DisplayMemberPath="SchoolName"
                                                    SelectedValue="{Binding SchoolName}"
                                                    SelectedValuePath="Id"
                                                    TabIndex="4">
                                                    <ComboBox.Template>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Grid>
                                                                <ComboBox
                                                                    x:Name="cb"
                                                                    Height="30"
                                                                    DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                                                    DisplayMemberPath="SchoolName"
                                                                    ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource TemplatedParent}}"
                                                                    SelectedValue="{Binding SelectedValue, RelativeSource={RelativeSource TemplatedParent}}"
                                                                    SelectedValuePath="Id">
                                                                    <ComboBox.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <TextBlock Text="{Binding SchoolName}" />
                                                                                <TextBlock Text=" - " />
                                                                                <TextBlock Text="{Binding Base}" />
                                                                                <TextBlock Text=" - " />
                                                                                <TextBlock Text="{Binding Year}" />
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </ComboBox.ItemTemplate>
                                                                </ComboBox>
                                                                <TextBlock
                                                                    x:Name="tb"
                                                                    Margin="3,3,0,0"
                                                                    IsHitTestVisible="False"
                                                                    Text="کلاس"
                                                                    Visibility="Hidden" />
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger SourceName="cb" Property="SelectedItem" Value="{x:Null}">
                                                                    <Setter TargetName="tb" Property="Visibility" Value="Visible" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </ComboBox.Template>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                                                <Image
                                                    x:Name="imgEditStudent"
                                                    Width="200"
                                                    Height="200"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Source="/Resources/Choose.png" />
                                                <Button
                                                    x:Name="btnEditChoose"
                                                    Width="200"
                                                    Height="35"
                                                    Margin="10,5"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Click="btnEditChoose_Click"
                                                    Style="{StaticResource ButtonPrimary}"
                                                    TabIndex="5">
                                                    <StackPanel
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Orientation="Horizontal">
                                                        <Image
                                                            Width="16"
                                                            Height="16"
                                                            Margin="-30,0,30,0"
                                                            Source="/Resources/open.png" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="#ffffff"
                                                            Text="انتخاب عکس"
                                                            TextWrapping="NoWrap" />
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </controls:TabItem>
            </controls:TabControl>
        </controls:ScrollViewer>
    </controls:TransitioningContentControl>
</UserControl>