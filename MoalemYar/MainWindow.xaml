<Metro:MetroWindow x:Class="MoalemYar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoalemYar.UserControls"
        xmlns:Metro="clr-namespace:Arthas.Controls.Metro;assembly=Arthas"
                   xmlns:controls="clr-namespace:Enterwell.Clients.Wpf.Notifications.Controls;assembly=Enterwell.Clients.Wpf.Notifications"
                   mc:Ignorable="d"
        d:DesignWidth="1600" d:DesignHeight="1200"
        Style="{StaticResource myWindow}"
                   Title="{Binding Path=appTitle}">
    <Metro:MetroWindow.Menu>
        <Metro:MetroTitleMenu>
            <Metro:MetroTitleMenuItem Header="تنظیمات" Icon="Resources/titleMuenIcon.png">
                <Metro:MetroMenuItem Header="تنظیمات شماره یک" />

                <Metro:MetroMenuSeparator />
                <Metro:MetroMenuItem Header="تنظیمات شماره پنج" Icon="Resources/titleMuenIcon.png" />
                <Metro:MetroMenuItem Header="تنظیمات شماره شش" Icon="Resources/titleMuenIcon.png">
                    <Metro:MetroMenuItem Header="تنظیمات شماره نه" Icon="Resources/titleMuenIcon.png" />
                    <Metro:MetroMenuSeparator />
                    <Metro:MetroMenuItem Header="تنظیمات شماره ده" Icon="Resources/titleMuenIcon.png" />
                    <Metro:MetroMenuItem Header="تنظیمات شماره یازده" Icon="Resources/titleMuenIcon.png">
                        <Metro:MetroMenuItem Header="تنظیمات شماره چهارده" Icon="Resources/titleMuenIcon.png" />
                        <Metro:MetroMenuSeparator />
                        <Metro:MetroMenuItem Header="تنظیمات شماره پانزده" Icon="Resources/titleMuenIcon.png" />
                    </Metro:MetroMenuItem>
                </Metro:MetroMenuItem>
            </Metro:MetroTitleMenuItem>
            <Metro:MetroTitleMenuItem Header="تنظیمات شماره یست یک" Icon="Resources/titleMuenIcon.png" />
        </Metro:MetroTitleMenu>
    </Metro:MetroWindow.Menu>
    <Metro:MetroWindow.ContextMenu>
        <Metro:MetroContextMenu>

            <Metro:MetroMenuItem Header="زیرمنو سه" />
            <Metro:MetroMenuSeparator />
            <Metro:MetroMenuItem Header="زیرمنو پنج" Icon="Resources/titleMuenIcon.png" />
            <Metro:MetroMenuItem Header="زیرمنو شش" Icon="Resources/titleMuenIcon.png">
                <Metro:MetroMenuItem Header="زیرمنو نه" Icon="Resources/titleMuenIcon.png" />
                <Metro:MetroMenuSeparator />
                <Metro:MetroMenuItem Header="زیرمنو ده" Icon="Resources/titleMuenIcon.png" />
                <Metro:MetroMenuItem Header="زیرمنو یازده" Icon="Resources/titleMuenIcon.png">
                    <Metro:MetroMenuItem Header="زیرمنو چهارده" Icon="Resources/titleMuenIcon.png" />
                    <Metro:MetroMenuSeparator />
                    <Metro:MetroMenuItem Header="زیرمنو شانزده" Icon="Resources/titleMuenIcon.png" />
                </Metro:MetroMenuItem>
            </Metro:MetroMenuItem>
            <Metro:MetroMenuSeparator />
            <Metro:MetroMenuItem x:Name="exit" Header="زیرمنو هفده" />
        </Metro:MetroContextMenu>
    </Metro:MetroWindow.ContextMenu>

    <Grid>

        <Metro:MetroMenuTabControl FlowDirection="RightToLeft" x:Name="tab" IconMode="True" SelectionChanged="tab_SelectionChanged">
            <Metro:MetroMenuTabItem Header="داشبورد مدیریتی" Icon="Resources/Home.png" IconMove="Resources/HomeMove.png">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="160" Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Metro:MetroScrollViewer>
                        <Border BorderBrush="#19000000" BorderThickness="0,0,1,0">
                            <StackPanel x:Name="lists">
                                <Metro:MetroExpander Header="داشبورد" Hint="نگاه کلی به اطلاعات" Icon="Resources/Dashboard.png"/>
                                <Metro:MetroExpander Icon="Resources/Verify.png" Header="عملیات پایه" Hint="ثبت اطلاعات" HintBackground="#FFF15151" IsExpanded="True">
                                    <StackPanel>
                                        <Metro:MetroSwitch Content="ثبت اطلاعات" IsChecked="True"/>
                                        <Metro:MetroExpander Icon="Resources/School.png" Header="مدرسه" Hint="0" HintBackground="Green" />
                                        <Metro:MetroExpander Icon="Resources/Class.png" Header="کلاس" Hint="0" HintBackground="Green" />
                                        <Metro:MetroExpander Icon="Resources/Students.png" Header="دانش آموز" Hint="0" HintBackground="Green" />
                                        <Metro:MetroExpander Icon="Resources/User.png" Header="حساب کاربری" Hint="0" HintBackground="Orange" />
                                    </StackPanel>
                                </Metro:MetroExpander>

                                <Metro:MetroExpander Header="فعالیت ها" Icon="Resources/Active.png" IsExpanded="True">
                                    <StackPanel>
                                        <Metro:MetroSwitch Content="ثبت اطلاعات" IsChecked="True"/>
                                        <Metro:MetroExpander Header="حضور و غیاب" Icon="Resources/Checkmark.png" Hint="1397/01/07" />
                                        <Metro:MetroExpander Header="پرسش دروس" Icon="Resources/Ask.png" Hint="ارزشیابی" HintBackground="#FFF15151" />
                                        <Metro:MetroExpander Header="فعالیت ها" Hint="گروهی" Icon="Resources/Groups.png" HintBackground="#FFF15151" />
                                    </StackPanel>
                                </Metro:MetroExpander>
                                <Metro:MetroExpander Header="نفرات برتر" Icon="Resources/Trophy.png" Hint="انتخاب شاگرد" HintBackground="#FFF15151" />
                                <Metro:MetroExpander Header="پیشرفت تحصیلی" Icon="Resources/Chart.png" Hint="نمودار" HintBackground="#FFF15151"/>
                                <Metro:MetroExpander Header="استعداد یابی" Icon="Resources/Talent.png" Hint="طرح شهاب" HintBackground="#FFF15151"/>
                            </StackPanel>
                        </Border>
                    </Metro:MetroScrollViewer>

                    <Metro:MetroTabControl x:Name="tabc" Grid.Column="1">
                        <Metro:MetroTabItem Header="بخش اول" Icon="Resources/tabIcon.png">
                            <Grid>

                                <Metro:MetroScrollViewer>
                                    <Metro:MetroWaterfallFlow x:Name="waterfallFlow" ListWidth="300">

                                        <Grid>
                                            <Metro:MetroGroupBox Header="تنظیمات پوسته (MetroColorPicker رابط کاربری)">
                                                <Grid>
                                                    <Button Content="Button" HorizontalAlignment="Left" Margin="54,164,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" />

                                                    <WrapPanel Orientation="Horizontal">
                                                        <Metro:MetroColorPicker x:Name="color1" Width="50" Height="50" Background="#6D819A" DefaultColor="#6D819A" Padding="5" />
                                                        <Metro:MetroColorPicker x:Name="color2" Width="50" Height="50" Background="#6D819A" DefaultColor="#6D819A" Padding="5" IsEnabled="False" />
                                                    </WrapPanel>
                                                </Grid>
                                            </Metro:MetroGroupBox>
                                        </Grid>
                                    </Metro:MetroWaterfallFlow>
                                </Metro:MetroScrollViewer>
                            </Grid>
                        </Metro:MetroTabItem>
                        <Metro:MetroTabItem Header="بخش دوم" />
                    </Metro:MetroTabControl>
                </Grid>
            </Metro:MetroMenuTabItem>
            <Metro:MetroMenuTabItem Header="آزمون آنلاین" Icon="Resources/Exam.png" IconMove="Resources/ExamMove.png">
                <!--<Grid>
                Content must be here
                </Grid>-->
            </Metro:MetroMenuTabItem>
            <Metro:MetroMenuTabItem Header="گزارش گیری" Icon="Resources/Report.png" IconMove="Resources/ReportMove.png">
                <!--<Grid>
                Content must be here
                </Grid>-->
            </Metro:MetroMenuTabItem>
            <Metro:MetroMenuTabItem Header="تنظیمات نرم افزار" Icon="Resources/Gears.png" IconMove="Resources/GearsMove.png">
                <Grid>
                    <Metro:MetroScrollViewer>
                        <ContentControl>
                            <ContentControl.ContentTemplate>
                                <DataTemplate>
                                    <local:Settings />
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                    </Metro:MetroScrollViewer>
                </Grid>
            </Metro:MetroMenuTabItem>
            <Metro:MetroMenuTabItem Header="درباره نرم افزار" Icon="Resources/Fingerprint.png" IconMove="Resources/FingerprintMove.png">
                <Grid>
                    <Metro:MetroScrollViewer>
                        <ContentControl Name="abtContent">
                            <ContentControl.ContentTemplate>
                                <DataTemplate>
                                    <local:About />
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                    </Metro:MetroScrollViewer>
                </Grid>
            </Metro:MetroMenuTabItem>
        </Metro:MetroMenuTabControl>
        <controls:NotificationMessageContainer FlowDirection="RightToLeft" Manager="{Binding Manager}" />
    </Grid>
</Metro:MetroWindow>